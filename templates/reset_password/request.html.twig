{% extends 'base.html.twig' %}

{% block title %}Passwort zur端cksetzen{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Passwort zur端cksetzen</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Geben Sie Ihre E-Mail-Adresse ein und wir senden Ihnen einen Link, um Ihr Passwort zur端ckzusetzen.
            </small>
        </div>

        <button class="btn btn-primary">E-Mail zum Zur端cksetzen des Kennworts senden</button>
    {{ form_end(requestForm) }}
{% endblock %}